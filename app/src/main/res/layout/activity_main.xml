<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".activity.MainActivity">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="100sp"
        android:layout_height="100sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10sp"
        android:src="@mipmap/ic_launcher"
        android:background="@null" />

    <Button
        android:id="@+id/btn_play"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="40sp"
        android:layout_marginTop="20sp"
        android:background="@drawable/background_play"
        android:backgroundTint="@color/button_menu"
        android:text="Play"
        android:textColor="#fff"
        android:textSize="30sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_play"
        android:orientation="vertical">

        <!--<Button-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_centerHorizontal="true"-->
            <!--android:layout_gravity="center"-->
            <!--android:layout_marginTop="10sp"-->
            <!--android:background="@null"-->
            <!--android:gravity="center"-->
            <!--android:onClick="onLeaderBoardClick"-->
            <!--android:text="Leaderboard"-->
            <!--android:textColor="#FBCF08"-->
            <!--android:textSize="18sp"-->
            <!--android:textStyle="bold" />-->

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="5sp"
            android:background="@null"
            android:gravity="center"
            android:onClick="onRateClick"
            android:text="RATE"
            android:textColor="@color/button_menu"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="5sp"
            android:background="@null"
            android:gravity="center"
            android:onClick="onLikeUsClick"
            android:text="LIKE US"
            android:textColor="@color/button_menu"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="5sp"
            android:background="@null"
            android:gravity="center"
            android:onClick="onAboutUsClick"
            android:text="ABOUT US"
            android:textColor="@color/button_menu"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="5sp"
            android:background="@null"
            android:gravity="center"
            android:onClick="onHotGameClick"
            android:text="HOT GAME"
            android:textColor="@color/button_menu"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>
    <LinearLayout android:id="@+id/bannerLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal" >
    </LinearLayout>
</RelativeLayout>
